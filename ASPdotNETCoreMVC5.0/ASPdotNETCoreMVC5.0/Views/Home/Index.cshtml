</section>


<div class="py-5 bg-light">
    <div class="container">
        @*<h4 class="display-5">Top Books</h4>*@
        <big>Top books</big>
        <p big>Top book using attribute </p>
        <div class="row">
            <div class="col-md-4">
                @*<partial name="_bookThumbnail" model="new BookModel()"/>*@
                @Html.Partial("_bookThumbnail", new BookModel())
            </div>
            <div class="col-md-4">
                @*<partial name="_bookThumbnail" model="new BookModel()"/>*@
